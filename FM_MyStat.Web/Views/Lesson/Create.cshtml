@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using FM_MyStat.Core.DTOs.LessonsDTO.Lessons;
@model CreateLessonsDTO
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User managament</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Asign lesson</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Asign lesson</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">New teacher</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewBag.CreateLessonError != null)
                                {
                                    <span class="text-danger mt-3">@ViewBag.CreateLessonError</span>
                                }
                                <form method="post" asp-action="Create">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="lessonName">Lesson name</label>
                                            <input type="text" name="Name" class="form-control" id="lessonName" placeholder="Lesson name">
                                        </div>
                                        <div class="form-group">
                                            <label for="lessonDescription">Description</label>
                                            <input type="text" name="Description" class="form-control" id="lessonDescription" placeholder="Description">
                                        </div>
                                        <div class="form-group">
                                            <label for="lessonStart">Start Date</label>
                                            <input type="datetime-local" name="Start" class="form-control" id="lessonStart">
                                        </div>
                                        <div class="form-group">
                                            <label for="lessonEnd">End Date</label>
                                            <input type="datetime-local" name="End" class="form-control" id="lessonEnd">
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-group">
                                            <label>Teacher ID</label>
                                            @Html.DropDownList("TeacherId", (SelectList)ViewBag.TeacherList, "-- Select Teacher --",  htmlAttributes: new { @class = "form-control" })
                                        </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <label>Group</label>
                                                @Html.DropDownList("GroupId", (SelectList)ViewBag.GroupList, "-- Select Group --",  htmlAttributes: new { @class = "form-control" })
                                            </div>
                                        </div>
                                            <div class="mb-3">
                                                <div class="form-group">
                                            <label>Subject ID</label>
                                            @Html.DropDownList("SubjectId", (SelectList)ViewBag.SubjectList, "-- Select Subject --",  htmlAttributes: new { @class = "form-control" })
                                        </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>