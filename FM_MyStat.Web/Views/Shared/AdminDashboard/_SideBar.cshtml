<script>
    document.addEventListener('DOMContentLoaded', function () {
        var sidebarImage = document.getElementById('sidebar-image');
        var brandLetter = document.getElementById('brand-letter');

        // Initially hide the letter M
        brandLetter.style.display = 'none';

        // Toggle the visibility of the image and letter M when the sidebar button is clicked
        document.querySelector('.nav-item a[data-widget="pushmenu"]').addEventListener('click', function () {
            setTimeout(function () {
                sidebarImage.style.display = sidebarImage.style.display === 'none' ? 'block' : 'none';
                brandLetter.style.display = brandLetter.style.display === 'none' ? 'block' : 'none';
            }, 300); // Adjust the delay (in milliseconds) based on your layout transition duration
        });
    });
</script>
