@using FM_MyStat.Core.DTOs.SubjectsDTO;
@model List<SubjectDTO>

<link rel="stylesheet" href="~/dashboard/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/dashboard/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/dashboard/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="~/css/stulescards.css" />

@{
    ViewData["Title"] = "Subject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All Subjects</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">@item.Name</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>Name:</strong> @item.Name</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Subject" asp-action="Edit" asp-route-id="@item.Id" class="button-28">Edit</a>
                                <a asp-controller="Subject" asp-action="Delete" asp-route-id="@item.Id" class="button-28">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>