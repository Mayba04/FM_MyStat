@using FM_MyStat.Core.Entities.Users;
@using FM_MyStat.Web.Models.ViewModels.Student;
@using Microsoft.AspNetCore.Identity;
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
@model DashboardStudentInfo;
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="container mt-4">
        <h1>Student Dashboard</h1>
        <hr>

        <!-- Rating -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Your Rating</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="card-text mb-1">Your place in the group:</p>
                                <h2 class="font-weight-bold">@Model.RatingGroup</h2>
                            </div>
                            <div class="bg-primary text-white rounded-circle p-3">
                                <i class="fas fa-trophy fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- List of Students -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Group Rating</h4>
                        <div class="list-group">
                            @foreach (var student in Model.RatingList)
                            {
                                <a href="#" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">@student.FirstName @student.SurName @student.LastName</h5>
                                            <p class="mb-0">Rating: @student.Rating</p>
                                        </div>
                                        <span class="badge badge-primary badge-pill">@student.Rating ★</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Homeworks Info</h4>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Checked</h6>
                                        <p class="card-text">@Model.HomeworksChecked</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Current</h6>
                                        <p class="card-text">@Model.HomeworksCurrent</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">On Inspection</h6>
                                        <p class="card-text">@Model.HomeworksOnInspection</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">Overdue</h6>
                                        <p class="card-text">@Model.HomeworksOverdue</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>