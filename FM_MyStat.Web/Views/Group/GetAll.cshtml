@using FM_MyStat.Core.DTOs.GrouopsDTO;
@model List<GroupDTO>

<link rel="stylesheet" href="~/dashboard/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/dashboard/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/dashboard/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="~/css/stulescards.css" />

@{
    ViewData["Title"] = "Group";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All Groups</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">@item.Name</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>Teacher:</strong></p>
                                <p class="card-text">@item.Teacher</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Group" asp-action="Update" asp-route-id="@item.Id" class="button-28">Edit</a>
                                <a asp-controller="Group" asp-action="Delete" asp-route-id="@item.Id" class="button-28">Delete</a>
                                <a asp-controller="Student" asp-action="GetByGroupId" asp-route-id="@item.Id" class="button-28">Students</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>