@using FM_MyStat.Core.DTOs.UsersDTO.Student;
@model List<StudentMarkDTO>;
@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Lesson Marks</h2>
<div class="content-wrapper">
    <div class="container">
        <div class="container-fluid">
            <form asp-controller="LessonMark" asp-action="SubmitMark" method="post">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ім'я</th>
                            <th>Прізвище</th>
                            <th>По батькові</th>
                            <th>Оцінка</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].FirstName</td>
                                <td>@Model[i].SurName</td>
                                <td>@Model[i].LastName</td>
                                <td>
                                    @Html.DropDownListFor(m => m[i].Mark, new SelectList(Enumerable.Range(1, 12)), htmlAttributes: new { @class = "form-control" })
                                    <input type="hidden" asp-for="@Model[i].LessonMarkId" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                </div>
            </form>
        </div>
    </div>
</div>
