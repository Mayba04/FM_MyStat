@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using FM_MyStat.Web.Models.ViewModels;
@model TeacherEditSubjectsViewModel
@{
    ViewData["Title"] = "Редагування предметів";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Edit subjects</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Edit subjects</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.CreateUserError != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.CreateUserError
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Edit Subjects for Teacher</h3>
                                </div>
                                <form asp-action="EditSubjects" method="post">
                                    <div class="card-body">
                                        <input type="hidden" asp-for="TeacherId" />
                                        <div class="form-group">
                                            <label for="Subjects">Select subjects:</label>
                                            @for (int i = 0; i < Model.Subjects.Count; i++)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="Subjects_@(i)" name="Subjects[@i].Selected" value="true" @(Model.Subjects[i].Selected ? "checked" : "") />
                                                    <input type="hidden" name="Subjects[@i].Id" value="@Model.Subjects[i].Id" />
                                                    <label class="form-check-label" for="Subjects_@(i)">@Model.Subjects[i].Name</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
