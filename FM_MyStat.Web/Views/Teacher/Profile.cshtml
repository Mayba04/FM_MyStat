@using FM_MyStat.Core.Entities.Users;
@using FM_MyStat.Web.Models.ViewModels;
﻿@using Microsoft.AspNetCore.Identity;
@model UpdateProfileTeacherVM

@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@inject UserManager<AppUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var email = await UserManager.GetEmailAsync(user);
}

<div class="content-wrapper">
    @*<h1>@Model.UserInfo.Email</h1>*@
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User managament</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- First column -->
                <div class="col-md-6">
                    <!-- General form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Quick Example</h3>
                        </div>
                        <form method="post" asp-controller="Teacher" asp-action="ChangeMainInfo">
                            <div class="card-body">
                                <div Visible="False" class="form-group" ty>
                                    <label style="display: none;">Id</label>
                                    <input type="hidden" class="form-control" name="Id" id="Id" placeholder="Enter Id" value="@user.Id">
                                    <input type="hidden" class="form-control" name="TeacherId" id="TeacherId" placeholder="Enter Id" value="@user.TeacherId">
                                    <input type="hidden" class="form-control" name="StudentId" id="StudentId" placeholder="Enter Id" value="@user.StudentId">
                                    <input type="hidden" class="form-control" name="AdministratorId" id="AdministratorId" placeholder="Enter Id" value="@user.AdministratorId">
                                </div>
                                <div class="form-group">
                                    <label for="firstNameInput">First Name</label>
                                    <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="Enter First Name" value="@user.FirstName">
                                </div>
                                <div class="form-group">
                                    <label for="lastNameInput">Last Name</label>
                                    <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Enter Last Name" value="@user.LastName">
                                </div>
                                <div class="form-group">
                                    <label for="firstNameInput">Sur Name</label>
                                    <input type="text" class="form-control" name="SurName" id="SurName" placeholder="Enter Sur Name" value="@user.SurName">
                                </div>
                                <div class="form-group">
                                    <label for="emailInput">Email</label>
                                    <input type="email" class="form-control" name="Email" id="Email" placeholder="Enter Email" value="@user.Email">
                                </div>
                                <div class="form-group">
                                    <label for="phoneNumberInput">Phone Number</label>
                                    <input type="text" class="form-control" name="PhoneNumber" id="PhoneNumber" placeholder="Enter Phone Number" value="@user.PhoneNumber">
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Second column -->
                <div class="col-md-6">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Update password</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        @if (@ViewBag.UpdatePasswordError != null)
                        {
                            <span class="text-danger mt-3">@ViewBag.UpdatePasswordError</span>
                        }
                        <form method="post" asp-controller="Teacher" asp-action="ChangePasswordInfo">
                            <div class="card-body">
                                <input type="hidden" name="Id" asp-for="=@user.Id" value=@user.Id />
                                <div class="form-group">
                                    <label for="Password">Old Password</label>
                                    <input type="password" asp-for="@Model.UpdatePassword.OldPassword" name="oldPassword" class="form-control" placeholder="Old password" />
                                </div>
                                <div class="form-group">
                                    <label for="Password">New Password</label>
                                    <input type="password" asp-for="@Model.UpdatePassword.NewPassword" name="newPassword" class="form-control" placeholder="New Password">
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <input type="password" name="confirmPassword" asp-for="@Model.UpdatePassword.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-danger">Update</button>
                            </div>
                        </form>
                    </div>
                    <hr />
                </div>

            </div>
        </div>
    </section>
</div>